{
  "name": "my-pwa-app",
  "version": "1.0.0",
  "description": "Vue + Electron 뽀모도로 타이머",
  "author": "Your Name",
  "main": "electron/main.js",  
  "scripts": {
    "dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron electron/main.js\"",
    "start": "electron electron/main.js",
    "build": "vite build && electron-builder",
    "electron:dev": "electron electron/main.js",
    "package": "electron-builder"
  },
  "build": {
    "appId": "com.example.timerapp",
    "productName": "MyTimerApp",
    "directories": {
      "output": "release",
      "buildResources": "assets"
    },
    "files": [
      "dist/",
      "electron/"
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "dependencies": {
    "vue": "^3.5.13"
  },
  "devDependencies": {
    "electron": "^34.3.0",
    "@vitejs/plugin-vue": "^5.2.1",
    "concurrently": "^8.2.1",
    "electron-builder": "^24.6.0",
    "vite": "^6.1.0",
    "vite-plugin-pwa": "^0.21.1",
    "wait-on": "^7.0.0"
  }
}
